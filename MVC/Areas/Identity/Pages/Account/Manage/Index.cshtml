@page
@model IndexModel
@{
    ViewData["Title"] = "My Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<head>
    <link rel="stylesheet" href="~/css/login.css"> <!-- Linking the login.css -->
    <title>Edit User</title>
</head>
<headerhh>
    
    <partial name="_StatusMessage" for="StatusMessage" />
</headerhh>
<div class="login-container">
    <div class="login">
        <main>
            <h2 style="text-align: center">@ViewData["Title"]</h2>
            <br/>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Age" class="form-label"></label>
                    <input asp-for="Input.Age" class="form-control" placeholder="Please enter your age."/>

                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>
                <div style="display: flex; align-items: center; justify-content: center">
                    <button type="submit" class="button">Save</button>
                </div>
                <div class="menu">
                    <a asp-area="Identity" asp-page="/Account/Manage/Email">Change Email</a>
                    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change Password</a>
                    <a asp-area="Identity" asp-page="/Account/Manage/PersonalData">Delete Account</a>
                </div>

                
            </form>
        </main> 
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
