@model BusinessLayer.User

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="stylesheet" href="~/css/UserEdit.css">
</head>
<headerhh>
<h1>Edit</h1>
<h4>User</h4>
</headerhh>
<main>
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
